                android:layout_width="280dp"
                android:layout_height="200dp"
                android:layout_marginLeft="55dp"
                android:src="@drawable/lfirst" />

            <Button
                android:id="@+id/pop1"
                android:layout_width="82dp"
                android:layout_height="76dp"
                android:layout_marginLeft="150dp"
